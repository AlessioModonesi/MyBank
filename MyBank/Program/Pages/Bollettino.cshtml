@page
@model MyBank.Pages.BollettinoModel
@{
    ViewData["Title"] = "Bollettino";
}

<!--Intestazione-->
<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <!--Colonna centrale-->
        <div class="col-6">
            <br><h2>@ViewData["Title"]</h2><br>
        </div>
    </div>
</div>

<!--Centrale-->
<div class="container" id="centrale">
    <div class="row justify-content-center">
        <!--Colonna centrale-->
        <div class="col-6">
            <img src="~/images/bollettone.png" class="responsive" width="250" height="200" style="width: 100%; max-width: 250px; height: auto;">
            <br><br>
            <form asp-page="/Bollettino" asp-page-handler="bollettino" class="form-signin" method="post">
                <div class="form-group">
                    <label for="tipo">Tipologia bollettino</label>
                    <input type="text" class="form-control" id="InputTipo" name="Tipologia" placeholder="Tipologia" aria-describedby="basic-addon1">
                </div>
                <div class="form-group">
                    <label for="codice">Codice a 18 cifre</label>
                    <input type="number" class="form-control" id="InputCodice" name="Codice" placeholder="Codice" aria-describedby="basic-addon1">
                </div>
                <div class="form-group">
                    <label for="conto">N. conto corrente</label>
                    <input type="number" class="form-control" id="InputConto" name="cc" placeholder="N. conto" aria-describedby="basic-addon1">
                </div>
                <div class="form-group">
                    <label for="importo">Importo del bollettino</label>
                    <input type="number" class="form-control" id="InputImporto" name="Importo" placeholder="Importo" aria-describedby="basic-addon1">
                </div>
                <button type="submit" class="btn btn-primary">Invia</button><br>
            </form>
            <br><br><br><br><br>
        </div>
    </div>
</div>