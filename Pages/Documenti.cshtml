@page
@model MyBank.Pages.DocumentiModel
@{
    ViewData["Title"] = "Documenti";
}

<!--Intestazione-->
<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-6">
            <br><h2>@ViewData["Title"]</h2><br>
        </div>
    </div>
</div>

<!--Centrale-->
<div class="container" id="centrale">
    <div class="row justify-content-center">
        <!--Colonna centrale-->
        <div class="col-6">
            <img src="~/images/document.png" class="responsive" width="350" height="350" style="width: 100%; max-width: 350px; height: auto;">
            <br><br>
            <form class="form-signin">
                <div class="form-group" style="text-align:center;">
                    <label for="fileIn">Seleziona un file</label>
                    <input type="file" class="form-control-file" id="fileIn">
                </div>
                <button type="submit" class="btn btn-primary" style="position:center;">Invia</button><br>
            </form>
            <br><br><br><br><br>          
        </div>
    </div>
</div>
