@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-6">
            <br><h2>@ViewData["Title"]</h2><br>
        </div>
    </div>
</div>

@{
    if (Startup.adminSetup == true)
    {
        <div class="container">
            <div class="row justify-content-center" style="text-align: center">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Movimenti" style="color:white;">Movimenti</a></div>
                        <div class="card-body">
                            <img src="~/images/movimenti.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Bilancio" style="color:white;">Bilancio</a></div>
                        <div class="card-body">
                            <img src="~/images/Bilancio.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/IBAN" style="color:white;">IBAN</a></div>
                        <div class="card-body">
                            <img src="~/images/IBAN.png" width="60" height="60">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center" style="text-align: center">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Bollettino" style="color:white;">Bollettino</a></div>
                        <div class="card-body">
                            <img src="~/images/Bollettino.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Bonifico" style="color:white;">Bonifico</a></div>
                        <div class="card-body">
                            <img src="~/images/bonifico.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Ricarica" style="color:white;">Ricarica</a></div>
                        <div class="card-body">
                            <img src="~/images/Ricarica.png" width="60" height="60">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center" style="text-align: center">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Profilo" style="color:white;">Profilo</a></div>
                        <div class="card-body">
                            <img src="~/images/profilo.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Carta" style="color:white;">Carta</a></div>
                        <div class="card-body">
                            <img src="~/images/cartasoldi.png" width="60" height="60">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header"><a href="/Documenti" style="color:white;">Documenti</a></div>
                        <div class="card-body">
                            <img src="~/images/documenti.png" width="60" height="60">
                        </div>
                    </div><br><br><br><br>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid">
            <div class="row justify-content-center">
                <!--COLONNA SINISTRA-->
                <div class="d-none d-sm-none d-md-none d-xl-block col-xl-3 order-xl-0">
                    <div class="container" style="border-radius: 5px; margin-right: auto;">
                        <br>
                        Movimenti: per dare un occhio alle tue entrate e alle tue uscite recenti
                        <hr>
                        Bilancio: per avere una visione globale dell'andamento del tuo conto
                        <hr>
                        IBAN: per visualizzare le informazioni del tuo conto
                        <hr>
                        Bollettino: per pagare bollettini postali
                        <hr>
                        Bonifico: per effettuare bonifici verso altri clienti MyBank
                        <hr>
                        Ricarica: per ricaricare il saldo del tuo telefono
                        <hr>
                        Profilo: per gestire le tue informazioni personali
                        <hr>
                        Carta: per visualizzare le informazioni sulla tua carta MyBank
                        <hr>
                        Documenti: per caricare i tuoi file da scambiare con noi
                        <br><br>
                    </div>
                </div>
                <!--COLONNA CENTRALE-->
                <div class="d-none d-sm-none d-lg-block col-lg-12 col-xl-6 order-lg-0 order-xl-1" style="margin: auto;">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/specchio.jpg" width="900" height="600">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Felicità.jpg" width="900" height="600">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/carte.jpg" width="900" height="600">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!--COLONNA DESTRA-->
                <div class="d-none d-sm-none d-xl-block col-xl-3 order-xl-2">
                    <img src="~/images/superpubblicità.jpg" width="400" height="600" style="border-radius: 5px; margin-left: auto;">
                </div>
            </div><br><hr class="d-none d-xl-block">

            <!--PRESENTAZIONE-->
            <div class="row justify-content-center">
                <div class="col-12 order-sm-0">
                    <p>
                        <br><br><br>
                        MyBank è nata da un'idea rivoluzionaria di Home Banking: registrandoti sul nostro portale potrai facilmente accedere
                        al tuo conto online ovunque tu sia. Tramite il menù avrai completa gestione di ogni parte del tuo conto:
                        dalla sezione "Movimenti" potrai dare un occhio alle tue entrate e uscite recenti;
                        dalla sezione "Bilancio" avrai subito una visione globale dell'andamento del tuo conto;
                        dalla sezione "IBAN" potrai visualizzare le informazioni del tuo conto;
                        dalla sezione "Bollettino" potrai pagare bollettini postali direttamente dal tuo smartphone;
                        dalla sezione "Bonifico" potrai effettuare bonifici gratuiti verso altri clienti MyBank;
                        dalla sezione "Ricarica" potrai facilmente ricaricare il saldo del tuo telefono;
                        dalla sezione "Profilo" potrai gestire le tue informazioni personali;
                        dalla sezione "Carta" potrai visualizzare le informazioni sulla tua carta MyBank;
                        dalla sezione "Documenti" potrai caricare e scaricare file da scambiare con noi.
                        Scegli MyBank, scegli il futuro!
                        <br><br><br>
                    </p>
                </div>
            </div>
        </div>
        <br>
        <br>
    }
}
